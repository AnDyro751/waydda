<div class="w-full sticky top-0 border-b z-40">
  <div class="flex w-full gap-4 px-6 bg-white items-center h-20 justify-between">
    <div class="w-7/12 flex items-center gap-12">
      <div class="w-auto">
        <a href="/">
          <img
            draggable="false"
            src="<%= get_image_url(20, 100, "utils/w-logo-5.png") %>"
            class="h-10"
            alt="waydda logo"
            />
        </a>
      </div>
      <div class="w-10/12">
        <form
          class="w-full relative">
          <div class="absolute top-0 flex justify-center items-center left-0 bottom-0 h-full ml-4">
            <img
              class="h-5 opacity-75"
              alt="svgImg"
              src="data:image/svg+xml;base64,"/>
          </div>
          <input type="search"
                 value="<%= params["search"].present? ? params["search"] : "" %>"
                 autoFocus="<%= params["search"].present? %>"
                 class="py-3 pl-12 pr-5 rounded-full bg-main-gray focus:outline-none w-full"
                 placeholder="Busca en tu ciudad"
            />
        </form>
      </div>
    </div>
    <div
      class="w-3/12">
      <div class="w-full">
        <%= render Shipment::Selecter.new(current_address: @current_address) %>
      </div>
      <%#= react_component("Shipment", props: {current_user: current_user, current_user_id: current_user ? current_user.id.to_s : nil, current_address: @current_address, locations: default_locations}, prerender: false) %>
    </div>
    <div class="w-2/12 px-0 flex items-center gap-3 justify-around">
      <%= render Header::Public::Cart.new(current_cart: @current_cart) %>
      <% if user_signed_in? %>
        <% if current_user.is_admin %>
          <!--        TODO: Agregar imagen para el dashboard -->
          <%= link_to my_place_path, title: "Panel de control" do %>
            <img
              class="h-6"
              alt="dashboard image" src="data:image/svg+xml;base64,"/>
          <% end %>
        <% end %>
      <% end %>
      <div class="w-auto flex justify-center">
        <% if user_signed_in? %>
          <%= link_to my_profile_path, class: "rounded-full select-none" do %>
            <!--            TODO: Agregar el dropdown-->
            <img class="h-8 shadow-lg rounded-full" src="<%= get_image_url(50, 50, "utils/icons8-test-account-96.png") %>" alt="Waydda default profile photo">
          <% end %>
        <% else %>
          <%= link_to "Inicia sesiÃ³n", new_user_session_path, class: main_color_button(color: "primary") %>
        <% end %>
      </div>
      <%#= react_component("Simple", props: {current_user: current_user, current_user_id: current_user ? current_user.id.to_s : nil, current_address: @current_address, locations: default_locations}, prerender: false) %>
    </div>
  </div>
</div>

