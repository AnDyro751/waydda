<div class="w-11/12 mx-auto flex flex-wrap mb-20">
  <div class="w-full my-4 py-4 breadcrumbs text-sm flex">
    <%= render_breadcrumbs :separator => '&#160;/&#160;', tag: "div" %>
  </div>
  <div class="w-full mx-auto mb-8 relative">
    <span class="bg-black shadow-lg hover:shadow-2xl relative transition duration-150 w-auto px-4 font-normal text-sm py-3 rounded text-white">
    <span class="animate-ping absolute inline-flex h-3 w-3 right-0 -mt-1  rounded-full bg-red-400 top-0 opacity-75"></span>
    <span class="inline-flex rounded-full h-3 w-3 bg-red-500 right-0 -mt-1 absolute top-0"></span>
    <img
      class="inline h-4 w-4 mr-2"
      alt="svgImg"
      src="data:image/svg+xml;base64,"/>
    Tu dirección actual está demasiado lejos de este lugar
  </span>
  </div>
  <div class="w-full flex space-x-8 bg-white rounded shadow p-4 justify-between">
    <div class="w-7/12">
      <img
        class="lazy h-full w-full"
        src="<%= get_image_url(15, 15, @product.photo, "contain") %>"
        data-src="<%= get_image_url(500, 500, @product.photo, "contain") %>"
        alt="Foto de <%= @product.name %>, <%= @product.description %>">
    </div>
    <div class="w-4/12 border border-gray-300 flex px-3 py-5 rounded flex-wrap self-start">
      <div class="w-full">
        <% if @product.get_public_stock <= 0 %>
          <div class="w-full mt-4 mb-8">
            <div class="w-full bg-red-600 p-3 text-sm font-medium rounded shadow transition duration-100 hover:shadow-lg text-white">
              <span>Producto no disponible</span>
            </div>
          </div>
        <% end %>
        <h1 class="text-2xl font-medium text-gray-900 mb-2 w-full"><%= @product.name %></h1>
        <h2 class="text-gray-700 w-full mb-4"><%= @product.description %></h2>
        <h3 class="text-2xl font-normal mb-h"><%= number_to_currency(@product.price) %></h3>
      </div>
      <%= simple_form_for(@product, url: place_product_add_to_cart_path(@place.slug, @product.slug), method: :post, remote: true, html: {class: "w-full flex flex-wrap"}) do |f| %>
        <div class="w-full">
          <%= render Products::Variants::List::Index.new(product: @product) %>
        </div>
        <div class="w-full">
          <label for="cart_item[quantity]" class="<%= label_color_class(size: "small") %>">Cantidad</label>
          <select
            <%= @product.get_public_stock <= 0 ? "disabled" : "" %>
            name="cart_item[quantity]"
            class="truncate block appearance-none w-full bg-white border border-gray-400 mt-3 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none"
          >
            <% (1..@product.get_public_stock).each do |a| %>
              <option
                value="<%= a %>">
                <%= a %>
              </option>
            <% end %>
          </select>
        </div>
        <div class="w-full mt-8">
          <%= f.submit "Agregar al carrito",
                       data: {disable_with: "Agregando..."},
                       class: "#{main_color_button(color: "primary", size: "big", padding: "big") } w-full"
          %>
        </div>
      <% end %>
    </div>
  </div>
</div>