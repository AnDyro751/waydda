<h1>Editar mi perfil</h1>
<%= simple_form_for(current_user, remote: true) do |f| %>
  <%= f.input :name %>
  <%= f.input :lastName %>
  <%= f.input :email, as: :email %>
  <%= f.submit %>
<% end %>
