<%= render Headers::Text.new(title: "Todos los productos") do %>
  <%= main_button(to: new_dashboard_product_path, action: "add", text: "Agregar producto") %>
<% end %>

<% if @products.length > 0 %>
  <div class="grid grid-cols-12 gap-4 w-full">
    <% @products.each do |product| %>
      <div class="col-span-6">
        <%= render Products::Item.new(product) %>
      </div>
    <% end %>
  </div>
  <div class="w-full flex justify-center mt-8">
    <%= will_paginate @products %>
  </div>
<% else %>
  <%= render EmptyRecords.new(title: params["page"] ? "Pagina #{params["page"]}, por aquÃ­ no hay nada ðŸ˜•" : "AÃºn no hay productos por mostrar") %>
<% end %>
