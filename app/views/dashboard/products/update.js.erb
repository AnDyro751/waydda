document.querySelector("#notifications").innerHTML = "";
<% if @product.errors.any? %>
document.querySelector("#notifications").innerHTML = "<%= j render Notifications::Alert.new(alert: "Se han encontrado errores al editar el producto",kind: "error") %>";
<% @product.errors.each do |keyE,error| %>
var element = document.querySelector("#product_<%= keyE %>");
if (element) {
    element.classList.add("border-red-500");
    element.classList.add("border-2");
    var spanElement = document.querySelector('[name="product[<%=keyE %>]_error"]')
    if (spanElement) {
        spanElement.innerHTML = "<%= error %>";
    } else {
        var newNotification = document.createElement("div")
        newNotification.innerHTML = "<%= j render Notifications::Alert.new(alert: "#{keyE} #{error}" ,kind: "error") %>";
        document.querySelector("#notifications").appendChild(newNotification);
    }
}
<% end %>
<% else %>
window.addToastify("primary", "Se ha actualizado el producto")
//document.querySelector("#notifications").innerHTML = "<%= j render Notifications::Alert.new(alert: "Se ha actualizado el producto") %>";
<% end %>

window.deleteFlashs();
