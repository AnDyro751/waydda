<div class="w-full mt-5 mb-8">
  <h2 class="font-normal text-xl">Vistos recientemente</h2>
</div>
<% if @products.length <= 0 %>
  <%= render(EmptyRecords.new(title: "AÃºn no hay productos para mostrar")) %>
<% else %>
  <div class="grid grid-cols-12 grap-4 w-full mt-4">
    <% @products.each do |product| %>
      <div class="col-span-6">
        <%= render Products::Item.new(product) do %>
          <%= link_to dashboard_product_path(product.slug) do %>
            <%= react_component('ResponsiveImage', props: {publicId: product.photo, alt: "product", byDefault: false, wrapperClass: "md:w-32 md:h-32 rounded", className: "rounded"}, prerender: false) %>
          <% end %>
        <% end %>
      </div>
      </div>
    <% end %>
<% end %>

