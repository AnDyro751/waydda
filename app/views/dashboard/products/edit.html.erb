<%= content_for(:head_tags) do %>
  <meta name="content_slug" content="<%= @product.id.to_s %>"/>
  <meta name="content_model" content="product"/>
<% end %>
<%= render Headers::Text.new(title: "#{@product.name}", subtitle: @product.description, link: dashboard_product_path(@product.slug), small: true) do %>
  <%= button_to "Desactivar", "#", class: main_color_button(color: "secondary") %>
<% end %>

<div class="w-full flex gap-6">
  <div class="w-8/12">
    <%= render 'form', product: @product %>
  </div>
  <div class="w-4/12">
    <div class="flex w-full flex-wrap">
      <p class="text-sm font-normal w-full text-gray-600">Foto del producto</p>
      <label
        class="h-48 rounded relative w-48 mt-2 bg-main-gray cursor-pointer"
      >
        <div class="absolute flex justify-center items-center rounded bottom-0 top-0 left-0 right-0 bg-black bg-opacity-25 opacity-0 hover:opacity-100 hover:bg-opacity-75 transition duration-150">
          <span class="text-sm text-white">Actualizar</span>
        </div>
        <img
          id="product_image"
          class="lazy h-48 rounded w-48 bg-gray-200"
          src="<%= get_image_url(10, 10, @product.photo, "contain") %>" data-src="<%= get_image_url(250, 250, @product.photo, "contain") %>" alt="<%= @product.name %> photo">
        <input type='file' class="hidden" accept="image/*" id="my-file-input"/>
      </label>
    </div>
    <div class="UppyInput-Progress w-full mt-8"></div>
  </div>
</div>

<%= javascript_packs_with_chunks_tag "dashboard/products/new", 'data-turbolinks-track': "reload" %>
