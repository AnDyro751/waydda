<%= simple_form_for(
        @item, remote: true, url: @item.new_record ? dashboard_items_path(type: "js") : dashboard_item_path(@item, type: "controller"),
        defaults: {
            input_html: {
                class: "#{input_color_class} mt-2 mb-4 resize-none",
                rows: "5"
            },
            label_html: {
                class: label_color_class(size: "big")
            }
        }
    ) do |f| %>
  <%= f.input :name, label: "Nombre de la categoría", placeholder: "Ej. Ropa roja" %>
  <%= f.input :description, as: :text, label: "Descripción", placeholder: "Una breve descripción (No se mostrará al público)" %>
  <div class="w-full mt-8 flex justify-end">
    <%= f.button :submit,
                 data: {"disable-with": "Cargando..."},
                 value: "Crear categoría",
                 class: main_color_button(color: "dark", with_shadow: false, size: "big", padding: "big")
    %>
  </div>
<% end %>