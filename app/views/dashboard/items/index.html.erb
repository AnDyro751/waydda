<%= render Headers::Text.new(title: "Categorías", small: false, with_margin: true) do %>
  <%= main_button(to: new_dashboard_item_path(custom_type: "html"), text: "Crear categoría", action: "add", color_button: "dark", remote: true) %>
<% end %>

<% if @items.length <= 0 %>
  <%= render EmptyRecords.new(title: "Aún no has agregado ninguna categoría") %>

<% else %>
  <%#= render Headers::Text.new(title: @aggregate.name, subtitle: "Variante de #{@product.name}", small: true, with_margin: true) do %>
  <%= render Dashboard::Items::List.new(items: @items) %>
<% end %>
