<%= react_component('dashboard/DashboardPlacePresentation', {place: @place, id: @place.id.to_s}, {prerender: true}) %>

<% if @place.pending? %>
  <h3>Esperando la confirmaci√≥n del administrador</h3>
<% else %>

  <p>
    <%= simple_form_for(@place, url: dashboard_place_update_slug_path(@place), remote: true) do |f| %>
      <%= f.input :slug, value: @place.slug %>
      <%= f.submit %>
    <% end %>
  </p>
  <div class="mt-4">
    <strong>Status:</strong>
    <% if @place.status == "inactive" %>
      <%= button_to "Activar", {to_action: "activate"}, method: :put, remote: true, class: "cursor-pointer bg-green-700 focus:outline-none text-white px-8 py-3 rounded shadow-2xl" %>
    <% else %>
      <%= button_to "Desactivar", {to_action: "deactivate"}, method: :put, remote: true, class: "cursor-pointer bg-red-700 focus:outline-none text-white px-8 py-3 rounded shadow-2xl" %>
    <% end %>
  </div>
<% end %>
