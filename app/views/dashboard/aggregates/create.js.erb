document.querySelector("#modal-notifications").innerHTML = "";
<% if @aggregate.errors.any? %>
document.querySelector("#modal-notifications").innerHTML = "<%= j render Notifications::Alert.new(alert: "Se han encontrado errores al crear la subvariante",kind: "error") %>";
<% else %>
document.querySelector("#aggregates-list").innerHTML += "<%= j render Dashboard::Aggregates::Item.new(aggregate: @aggregate, aggregate_category: @aggregate_category, product: @product)  %>";
window.current_modal.close();
<% end %>

