  <%= render Headers::Text.new(title: "Pedido ##{@order.uuid}", small: false, subtitle: "#{@order.shipment_type === "pickup" ? "Recolección en sucursal" : "Envío a domicilio"}") %>
<div class="w-full space-y-4">
  <% @order.order_items.each do |order_item| %>
    <div class="w-full border p-4 <%= border_color %>" >
      <p><%= order_item.quantity %></p>
      <p><%= order_item.id %></p>
      <%#= order_item.aggregates %>
      <% order_item.aggregates.each do |aggi| %>
        <p>
          <%= aggi["aggregate_category"]["name"] %>
        </p>
        <% aggi["subvariants"].each do |sb| %>
          <p class="font-medium"><%= sb["name"] %></p>
          <p class="font-medium">+<%= number_to_currency(sb["price"]) %></p>
        <% end %>
    <% end %>
      <p class="font-medium"><%= number_to_currency(order_item.product.price) %></p>
      <p><%= order_item.product.name %></p>
    </div>
  <% end %>
  <h3 class="text-gray-700 font-normal mb-2 mt-3">Total:</h3>
  <h4 class="text-3xl font-medium"><%= number_to_currency(@order.total_order) %></h4>
</div>
