<% if current_user.id == @place.user_id %>
  <%= render Notifications::Alert.new(alert: "Está página aún no ha sido publicada. Sólo tú puedes verla", kind: "error") %>
<% end %>

<%= render Places::Presentation.new(delivery_option: @delivery_option, place: @place, current_cart: @current_cart) %>

<p>
  <strong>Address:</strong>
  <%= @place.address %>
</p>

<p>
  <strong>Productos: <%= @place.total_products %></strong>
</p>

<% @products.each do |product| %>
  <div class="bg-gray-100 p-3 my-3">
    <p>Nombre: <%= product.name %></p>
    <p>Descripción: <%= product.description %></p>
    <p>Aggregates <%= product.aggregates.length %></p>
    <p>Precio: <%= number_to_currency(product.price, raise: true, format: "%u %n") %></p>
    <%= button_to "Agregar al carrito", add_product_to_cart_path(@place.slug, product), method: :post, class: "cursor-pointer", remote: true, data: {"disable-with": "Agregando..."} %>
  </div>
<% end %>
<%= will_paginate @products %>