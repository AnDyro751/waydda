<script type="application/ld+json">
  {
   "@context": "https://schema.org",
   "@type": "Place",
   "name": "<%= @place.name %>",
   "address":"<%= @place.address %>",
   "geo": {
      "@type": "GeoCoordinates",
      "latitude": "<%= @place.lat %>",
      "longitude": "<%= @place.lng %>"
    },
    "currenciesAccepted": "MXN",
    "paymentAccepted": true,
    "url": "https://waydda.com/places/<%= @place.slug %>"
  }
</script>
<% if @place.delivery_option and @place.kind === "premium" %>
  <%= content_for(:head_tags) do %>
    <meta name="show-modal" content="<%= @available_distance ? "no" : "yes" %>">
  <% end %>
<% end %>
<%= render Places::Presentation.new(delivery_option: @delivery_option, place: @place, current_cart: @current_cart, items: @items) %>
<%= render Places::DeliveryModal.new(message: "E", current_user: current_or_guest_user, available_distance: @available_distance) %>
<div class="w-10/12 mx-auto flex flex-wrap">
  <% @items.each do |item| %>
    <div class="w-full flex flex-wrap " id="<%= item.id.to_s %>">
      <h2 class="text-sm font-medium text-gray-600 mb-8 pb-4 border-b uppercase w-full"><%= item.name %></h2>
      <div class="w-full mb-8">
        <%= render Products::List.new(products: item.recent_products, place: @place) %>
      </div>
    </div>
  <% end %>
</div>


