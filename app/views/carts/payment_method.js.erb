var element = document.querySelector("#select-payment-method input[name='to_state']")
if (element) {
    if (element.value === "card") {
        document.querySelector("#payment-with-cash").classList.add("hidden");
        document.querySelector("#payment-form").classList.remove("hidden")
    } else {
        document.querySelector("#payment-with-cash").classList.remove("hidden");
        document.querySelector("#payment-form").classList.add("hidden")
    }
    document.querySelector("#payment-selected").innerHTML = element.value === "card" ? "Tarjeta de crédito/débito" : "Efectivo"
    element.value = element.value === "card" ? "cash" : "card"
}
