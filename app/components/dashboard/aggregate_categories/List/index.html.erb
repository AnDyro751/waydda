<div class="w-full rounded flex-wrap">
  <% if @product.aggregate_categories.length <= 0 %>
    <%= render EmptyRecords.new(title: "Aún no has agregado ninguna variante") %>
  <% else %>
    <div class="w-full flex px-3 py-2 border-b border-gray-200 border-t gap-x-4">
      <div class="w-5/12">
        <span class="text-xs text-gray-700 font-normal uppercase">Nombre</span>
      </div>

      <div class="w-2/12 text-center">
        <span class="text-xs text-gray-700 font-normal uppercase">Requerido</span>
      </div>
      <div class="w-2/12 text-center">
        <span class="text-xs text-gray-700 font-normal uppercase">Múltiple</span>
      </div>
      <div class="w-3/12 text-center">
        <span class="text-xs text-gray-700 font-normal uppercase">Subvariantes</span>
      </div>
    </div>
    <div class="w-full flex flex-wrap divide-y divide-gray-200">
      <% @product.aggregate_categories.each_with_index do |aggregate_category, i| %>
        <%= link_to dashboard_product_aggregate_category_path(@product, aggregate_category), class: "w-full flex hover:bg-gray-200" do %>
          <div class="w-full flex px-3 py-4 gap-x-4 items-center">
            <div class="w-5/12">
              <span class="font-medium text-sm truncate"><%= aggregate_category.name %></span>
              <% if aggregate_category.aggregates.length <= 0 %>
                <br>
                <small class="text-xs text-gray-600 italic">No se muestra (sin subvariantes)</small>
              <% end %>
            </div>
            <!--            <div class="w-4/12">-->
            <!--              <span class="text-sm truncate <%#= aggregate_category.description.empty? ? "text-gray-500" : "" %>"><%#= aggregate_category.description.empty? ? "—" : aggregate_category.description %></span>-->
            <!--            </div>-->
            <div class="w-2/12 text-center flex justify-center">
              <% if aggregate_category.required %>
                <img
                  class="h-5 w-5"
                  draggable="false"
                  alt="svgImg"
                  src="data:image/svg+xml;base64,"/>
              <% else %>
                <img
                  class="h-5 w-5"
                  draggable="false"
                  alt="svgImg" src="data:image/svg+xml;base64,"/>
              <% end %>
            </div>
            <div class="w-2/12 text-center flex justify-center">
              <% if aggregate_category.multiple_selection %>
                <img
                  class="h-5 w-5"
                  draggable="false"
                  alt="svgImg"
                  src="data:image/svg+xml;base64,"/>
              <% else %>
                <img
                  class="h-5 w-5"
                  draggable="false"
                  alt="svgImg" src="data:image/svg+xml;base64,"/>
              <% end %>
            </div>
            <div class="w-3/12  flex justify-center">
              <span class="text-sm truncate text-gray-700"><%= helpers.pluralize(aggregate_category.aggregates.length, "subvariante", plural: "subvariantes") %></span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>