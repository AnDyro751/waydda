  <% else %>
    <div class="w-full flex px-4 gap-4 py-2 border-b border-t">
      <div class="w-2/5">
        <span class="text-xs text-gray-700 font-normal uppercase">Nombre</span>
      </div>
      <div class="w-1/5">
        <span class="text-xs text-gray-700 font-normal uppercase">Precio</span>
