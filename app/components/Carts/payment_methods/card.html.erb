<%= simple_form_for(@place, url: place_create_charge_path(@place.slug), method: :post, remote: true, html: {id: "payment-form", class: "w-full flex flex-wrap mt-4 "}) do |f| %>
  <div class="w-full">
    <label for="card-element" class="text-sm text-gray-600">
      Tarjeta de crédito o débito
    </label>
    <div id="card-element" class="mt-2 bg-main-gray p-4 rounded">
    </div>

    <div id="card-errors" role="alert"></div>
  </div>

  <div class="w-full my-8 flex justify-end">
    <%= f.submit "Realizar pedido", id: "submit-button", class: "#{helpers.main_color_button(color: "primary")}", data: {disable_with: "Cargando..."} %>
  </div>
<% end %>

