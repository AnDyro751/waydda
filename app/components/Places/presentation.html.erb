<% content_for :sticky do %>
  <%= render Places::Menu.new(delivery_option: @delivery_option, place: @place, current_cart: @current_cart) %>
<% end %>
<% content_for :content do %>
  <div class="h-64 bg-gray-300 w-full bg-center bg-cover bg-no-repeat"
  >
    <img
      src="<%= helpers.get_image_url(12, 50, @place.cover, "cover") %>"
      data-src="<%= helpers.get_image_url(250, 1000, @place.cover, "cover") %>"
      class="lazy h-full w-full"
      draggable="false"
      alt="<%= @place.cover %> cover photo">
  </div>
<% end %>
<div
  id="scroll-container"
  class="w-10/12 mx-auto main-scroll gap-8 mt-5 flex overflow-x-auto pb-8">
  <% @items.each do |item| %>
    <div class="<%= helpers.main_color_button(color: "primary") %>">
      <%= item.name %>
    </div>
  <% end %>
</div>
<div class="w-full mb-8 justify-center flex">
  <div class="w-10/12 mx-auto">
    <h1 class="text-4xl font-bold text-gray-900"><%= @place.name %></h1>
    <div class="w-auto gap-2 flex items-center mt-3">
      <div class="w-auto">
        <img
          load="lazy"
          class="h-5 opacity-75"
          src="data:image/png;base64,"/>
      </div>
      <div class="w-auto">
        <h5 class="text-base text-gray-700 font-normal"><%= @place.address %></h5>
      </div>
    </div>
  </div>
</div>
