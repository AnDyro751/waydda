<% content_for :sticky do %>
  <%= render Places::Menu.new(delivery_option: @delivery_option, place: @place, current_cart: @current_cart) %>
<% end %>
<% content_for :content do %>
  <div class="h-64 bg-gray-300 w-full bg-center bg-cover relative bg-no-repeat">
    <div class="absolute bottom-0 top-0 left-0 right-0 bg-opacity-50 bg-black"></div>
    <img
      src="<%= helpers.get_image_url(12, 50, @place.cover, "cover") %>"
      class="lazy h-full w-full hidden"
      draggable="false"
      alt="<%= @place.name %> cover photo">
    <div
      class="lazy h-full w-full bg-no-repeat bg-cover bg-center"
      data-bg="<%= helpers.get_image_url(240, 1000, @place.cover, "cover") %>">
    </div>
  </div>
<% end %>
<% unless @available_distance %>
  <div class="w-10/12 mx-auto mt-8">
  <span class="bg-black shadow-lg w-auto px-4 font-normal text-sm py-3 rounded text-white">
    <img
      class="inline h-4 w-4 mr-2"
      alt="svgImg"
      src="data:image/svg+xml;base64,"/>
    Tu dirección actual está demasiado lejos de este lugar
  </span>
  </div>
<% end %>
<div
  id="scroll-container"
  class="w-10/12 mx-auto main-scroll mt-5 flex overflow-x-auto pb-4">
  <% @items.each do |item| %>
    <div class="<%= helpers.main_color_button(color: "primary") %> mr-6">
      <%= item.name %>
    </div>
  <% end %>
</div>
<div class="w-full mb-8 justify-center flex">
  <div class="w-10/12 mx-auto">
    <h1 class="text-4xl font-bold text-gray-900"><%= @place.name %></h1>
    <div class="w-auto flex items-center mt-3">
      <div class="w-auto mr-2">
        <img
          load="lazy"
          class="h-5 opacity-75"
          src="data:image/png;base64,"/>
      </div>
      <div class="w-auto">
        <h5 class="text-base text-gray-700 font-normal"><%= @place.address %></h5>
      </div>
    </div>
  </div>
</div>
