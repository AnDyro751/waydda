<div class="sticky top-0 bg-white justify-center flex items-center border-b py-3 z-10">
  <div class="w-10/12 mx-auto flex">
    <div class="w-3/12 flex items-center mr-4 <%= @place.delivery_option ? "justify-around" : "justify-start" %>">
      <% if @place.delivery_option %>
        <%= button_to place_delivery_options_path(@place.slug, @current_cart),
                      data: {"disable-with": "Actualizando..."},
                      params: {to_state: "delivery"},
                      id: "menu-delivery",
                      remote: true,
                      method: :put,
                      class: "text-sm w-auto py-2 hover:text-gray-600 focus:outline-none #{
                      if @delivery_option.nil?
                        "border-b-2 border-transparent"
                      else
                        @delivery_option.kind === "delivery" ? "border-b-2 border-green-600" : ""
                      end}" do %>
          <span class="text-sm font-normal">Enviar a domicilio</span>
        <% end %>
      <% end %>
      <%= button_to place_delivery_options_path(@place.slug, @current_cart), data: {"disable-with": "Actualizando..."}, params: {to_state: "pickup"}, id: "menu-pickup", remote: true, method: :put, class: "relative w-auto py-2 text-sm hover:text-gray-600 focus:outline-none #{
      if @delivery_option.nil?
        "border-b-2 border-green-600"
      else
        if @delivery_option.kind === "pickup"
          "border-b-2 border-green-600"
        else
          @place.delivery_option ? "" : "border-b-2 border-green-600"
        end
      end
      }" do %>
        <span class="text-sm font-normal">Recoger en tienda</span>
      <% end %>

    </div>
    <%= link_to place_path(@place.slug), class: "w-auto flex items-center #{current_page?(place_path(@place.slug)) ? "bg-black text-white shadow-lg" : "shadow"} text-sm px-3 rounded cursor-pointer mr-2" do %>
      <div class="w-auto mr-2">
        <% if current_page?(place_path(@place.slug)) %>
          <img
            class="h-5"
            src="data:image/png;base64,">
        <% else %>
          <img
            class="h-5"
            src="data:image/png;base64,"/>
        <% end %>
      </div>
      <div class="w-auto">
        <span class="font-bold">Inicio</span>
      </div>
    <% end %>

    <%= link_to place_catalog_path(@place.slug), class: "w-auto flex items-center #{current_page?(place_catalog_path(@place.slug)) ? "bg-black text-white shadow-2xl" : "shadow"} text-sm px-3 rounded cursor-pointer mr-2" do %>

      <div class="w-auto mr-2">
        <% if current_page?(place_catalog_path(@place.slug)) %>
          <img
            class="h-5"
            src="data:image/png;base64,">
        <% else %>
          <img
            class="h-5"
            src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABgAAAAYCAYAAADgdz34AAAABmJLR0QA/wD/AP+gvaeTAAAAi0lEQVRIiWNgGAUkAgEGBoYlDAwMHxkYGP5jwQ5QjE3uIwMDw2KoGTjBEhyaibEAhhchG8iEZoEvCb7FBfzwWcBHBQv48VlAdTBqAUHAgsZ3JaD+IpHq4IDmPmBE4/8noN4RSu8n1tyhH8nDz4JPVDDzIz4LNlHBArxmCDBAynNyK5xFDAQqnFGAAQBQAzKt/7KN6wAAAABJRU5ErkJggg=="/>
        <% end %>
      </div>

      <div class="w-auto">
        <span class="font-bold">Pasillos</span>
      </div>
    <% end %>
  </div>
</div>
