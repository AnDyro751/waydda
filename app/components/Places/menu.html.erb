<div class="sticky top-0 bg-white justify-center flex items-center border-b py-3">
  <div class="w-10/12 mx-auto flex gap-4">
    <div class="w-3/12 flex items-center <%= @place.delivery_option ? "justify-around" : "justify-start" %>">
      <% if @place.delivery_option %>
        <%= button_to place_delivery_options_path(@place.slug), data: {"disable-with": "Actualizando..."}, params: {to_state: "delivery"}, id: "menu-delivery", remote: true, method: :put, class: "text-sm w-auto py-2 hover:text-gray-600 focus:outline-none #{
        if @delivery_option.nil?
          "border-b-2 border-green-600"
        else
          @delivery_option.kind === "delivery" ? "border-b-2 border-green-600" : ""
        end}" do %>
          <span class="text-sm font-normal">Enviar a domicilio</span>
        <% end %>
      <% end %>

      <%= button_to place_delivery_options_path(@place.slug), data: {"disable-with": "Actualizando..."}, params: {to_state: "pickup"}, id: "menu-pickup", remote: true, method: :put, class: "w-auto py-2 text-sm hover:text-gray-600 focus:outline-none #{
      if @delivery_option.nil?
        ""
      else
        if @delivery_option.kind === "pickup"
          "border-b-2 border-green-600"
        else
          @place.delivery_option ? "" : "border-b-2 border-green-600"
        end
      end}" do %>
        <span class="text-sm font-normal">Recoger en tienda</span>
      <% end %>

    </div>
    <div class="w-auto flex items-center">
      <img
        class="inline"
        src="data:image/png;base64,"/>
      <span>Inicio</span>
      <!--      <img src="data:image/png;base64,">-->
    </div>
  </div>
</div>
