<div class="w-1/2 flex flex-wrap mt-8 items-center">
  <div class="w-auto mr-4">
    <% if @available %>
      <img
        class="w-4 h-4"
        alt="Current feature"
        src="data:image/svg+xml;base64,"
        />
    <% else %>
      <img
        alt="Waydda"
        class="w-4 h-4"
        src="data:image/svg+xml;base64,"/>
    <% end %>
  </div>
  <div class="w-10/12 flex flex-wrap relative">
    <span class="font-medium w-full text-gray-700"><%= @text %></span>
  </div>
  <% if @soon %>
    <p class="w-full ml-8 font-medium text-main-red text-xs">Próximamente</p>

    <!--      <div class="absolute bottom-0 top-0 right-0 translate-x-full -mr-4 select-none transform">-->
    <!--        <span class="bg-main-red rounded-full text-white text-xs px-2 py-1">Próximamente</span>-->
    <!--      </div>-->
  <% end %>
</div>

