<div class="w-full flex border-b mb-4 <%= @small ? "pt-8 pb-5" : "py-12" %> items-center">
  <div class="w-6/12">
    <h2 class="text-3xl font-bold"><%= @title %></h2>
    <% if @subtitle %>
      <h3 class="text-sm text-gray-700 mt-1">
        <%= @subtitle %>
      </h3>
    <% end %>
  </div>
  <div class="w-6/12 flex justify-end">
    <%= content %>
  </div>
</div>